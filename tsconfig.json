{
  "compilerOptions": {
    "target": "es2022",
    // FIX APPLIED: Changed from "commonjs" to "ESNext". 
    // This resolves the conflict with "moduleResolution": "bundler", 
    // allowing the modern bundling process to continue.
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "jsx": "react-native"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}